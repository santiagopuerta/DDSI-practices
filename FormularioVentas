<script language="javascript">
	function validar(){
		var idtienda= f.idTienda.value;
		var idcomercialventas= f.idComercialVentas.value;
		var cantidad= f.cantidad.value;
		
		nombre= nombre.toUpperCase();
		direccion= direccion.toUpperCase();
		ciudad= ciudad.toUpperCase();
				
		if(idtienda== "" || idcomercialventas== "" || cantidad <1){
			alert('Debe introducir todos los datos en el formulario o poner una cantidad mayor que 0');
			return false;
		}
		else{
		f.idtienda.value=idtienda;
		f.idcomercialventas.value=idcomercialventas;
		f.cantidad.value=cantidad;
		return true;
		}
	}
</script>
